generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  ELECTRONICS
  FURNITURE
  HOME_APPLIANCES
  SPORTING_GOODS
  OUTDOOR
  TOYS
}

model User {
  id              Int       @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String    @unique
  address         String
  phoneNumber     String    @unique
  password        String
  confirmPassword String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  products        Product[]
}

model Product {
  id            Int        @id @default(autoincrement())
  title         String
  categories    Category[]
  description   String
  purchasePrice Float
  rentPrice     Float
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  // Foreign key to User
  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@index([userId])
}
